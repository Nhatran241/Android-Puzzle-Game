<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535"
    tools:context=".MainActivity">

    <com.nstudio.myapplication.engine.GameView
        android:paddingTop="@dimen/dp100"
        android:paddingBottom="@dimen/dp50"
        android:id="@+id/gameview"
        android:background="#353535"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.nstudio.myapplication.engine.GameView>
    <com.nstudio.myapplication.engine.PuzzleBlockView
        android:scrollbars="none"
        android:id="@+id/puzzle1"
        android:layout_below="@id/gameview"
        android:layout_width="@dimen/dp100"
        android:layout_height="wrap_content" />
    <com.nstudio.myapplication.engine.PuzzleBlockView2
        android:layout_alignParentRight="true"
        android:scrollbars="none"
        android:id="@+id/puzzle2"
        android:layout_below="@id/gameview"
        android:layout_width="@dimen/dp100"
        android:layout_height="wrap_content" />

</RelativeLayout>